    <script>
        const breeds = [
            { name: "Arabian", category: "Light", origin: "Middle East", trait: "Dished face, 17 ribs, high tail carriage.", group: "Hot-Blooded" },
            { name: "Thoroughbred", category: "Light", origin: "England", trait: "Long legs, deep chest, supreme racing stamina.", group: "Hot-Blooded" },
            { name: "Quarter Horse", category: "Light", origin: "USA", trait: "Highly muscled hindquarters; sprinter speed.", group: "Hot-Blooded" },
            { name: "Appaloosa", category: "Light", origin: "USA", trait: "Spotted coat, white sclera, striped hooves.", group: "Light" },
            { name: "Morgan", category: "Light", origin: "USA", trait: "Compact, stylish, versatile family horse.", group: "Light" },
            { name: "Paint Horse", category: "Light", origin: "USA", trait: "Tobiano or Overo pinto patterns.", group: "Light" },
            { name: "Clydesdale", category: "Draft", origin: "Scotland", trait: "White feathering on legs, large bay frame.", group: "Cold-Blooded" },
            { name: "Shire", category: "Draft", origin: "England", trait: "Largest draft breed; tallest in the world.", group: "Cold-Blooded" },
            { name: "Percheron", category: "Draft", origin: "France", trait: "Heavy muscle, usually black or grey, clean legs.", group: "Cold-Blooded" },
            { name: "Belgian", category: "Draft", origin: "Belgium", trait: "Massive power; chestnut with flaxen mane.", group: "Cold-Blooded" },
            { name: "Hanoverian", category: "Warmblood", origin: "Germany", trait: "Bred for Olympic Dressage and Jumping.", group: "Warmblood" },
            { name: "Dutch Warmblood", category: "Warmblood", origin: "Netherlands", trait: "High performance sport horse; athletic build.", group: "Warmblood" },
            { name: "Shetland Pony", category: "Pony", origin: "Scotland", trait: "Small but sturdy; double coat for cold.", group: "Pony" },
            { name: "Icelandic Horse", category: "Pony", origin: "Iceland", trait: "Unique 4-beat gait called the 'T√∂lt'.", group: "Gait-Specific" },
            { name: "Friesian", category: "Light", origin: "Netherlands", trait: "Always black, wavy mane/tail, high stepping.", group: "Warmblood" }
        ];

        function showSection(id) {
            // Hide all
            document.querySelectorAll('section').forEach(s => s.classList.add('hidden-section'));
            document.querySelectorAll('nav button').forEach(b => b.classList.remove('tab-active'));
            
            // Show target
            document.getElementById('section-' + id).classList.remove('hidden-section');
            document.getElementById('btn-' + id).classList.add('tab-active');
        }

        function filterBreeds(category) {
            const container = document.getElementById('breed-container');
            container.innerHTML = '';
            
            const filtered = category === 'all' ? breeds : breeds.filter(b => b.category === category);
            
            filtered.forEach(breed => {
                const card = document.createElement('div');
                card.className = 'card p-6 border-t-4 ' + (breed.category === 'Draft' ? 'border-blue-500' : breed.category === 'Warmblood' ? 'border-green-500' : 'border-orange-500');
                card.innerHTML = `
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="text-xl font-bold">${breed.name}</h3>
                        <span class="text-xs font-bold px-2 py-1 bg-gray-100 rounded">${breed.category}</span>
                    </div>
                    <p class="text-sm text-gray-500 mb-2 font-semibold">Origin: ${breed.origin}</p>
                    <p class="text-sm text-gray-700 italic border-l-2 border-gray-200 pl-3">${breed.trait}</p>
                `;
                container.appendChild(card);
            });
        }

        // Quiz Logic
        let currentQuestion = 0;
        const quizData = [
            { q: "Which breed is famous for a 'Dished Profile' and a high tail carriage?", a: "Arabian", options: ["Arabian", "Thoroughbred", "Quarter Horse", "Shire"] },
            { q: "Which breed is known for its incredible speed over short distances (1/4 mile)?", a: "Quarter Horse", options: ["Paint Horse", "Quarter Horse", "Hanoverian", "Belgian"] },
            { q: "Which giant breed from Scotland is known for its massive white leg feathers?", a: "Clydesdale", options: ["Percheron", "Shire", "Clydesdale", "Icelandic"] },
            { q: "What is the unit of measure for horse height?", a: "Hands", options: ["Feet", "Meters", "Hands", "Pounds"] }
        ];

        function loadQuiz() {
            const container = document.getElementById('quiz-question');
            const options = document.getElementById('quiz-options');
            const feedback = document.getElementById('quiz-feedback');
            const nextBtn = document.getElementById('next-btn');

            feedback.classList.add('hidden');
            nextBtn.classList.add('hidden');
            
            const q = quizData[currentQuestion];
            container.innerText = q.q;
            options.innerHTML = '';
            
            q.options.forEach(opt => {
                const btn = document.createElement('button');
                btn.className = "w-full text-left p-4 border rounded hover:bg-gray-50 transition";
                btn.innerText = opt;
                btn.onclick = () => checkAnswer(opt);
                options.appendChild(btn);
            });
        }

        function checkAnswer(choice) {
            const q = quizData[currentQuestion];
            const feedback = document.getElementById('quiz-feedback');
            feedback.classList.remove('hidden');
            
            if (choice === q.a) {
                feedback.innerText = "Correct! Well done.";
                feedback.className = "mt-6 p-4 rounded-lg bg-green-100 text-green-800";
            } else {
                feedback.innerText = "Incorrect. The correct answer was " + q.a + ".";
                feedback.className = "mt-6 p-4 rounded-lg bg-red-100 text-red-800";
            }
            document.getElementById('next-btn').classList.remove('hidden');
        }

        function nextQuestion() {
            currentQuestion++;
            if (currentQuestion >= quizData.length) {
                currentQuestion = 0;
            }
            loadQuiz();
        }

        function convertHeight() {
            const inches = document.getElementById('inchInput').value;
            if (!inches) return;
            const hands = Math.floor(inches / 4);
            const remainingInches = inches % 4;
            document.getElementById('calcResult').innerText = `${hands}.${remainingInches} hh`;
        }

        // Initialize
        window.onload = () => {
            filterBreeds('all');
            loadQuiz();
        };
    </script>
</body>
