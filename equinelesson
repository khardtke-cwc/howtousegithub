            <div class="max-w-2xl mx-auto">
                <div id="quiz-container" class="card p-8">
                    <h2 class="text-3xl font-bold mb-6">Breed ID Challenge</h2>
                    <p id="quiz-question" class="text-xl mb-6">Loading question...</p>
                    <div id="quiz-options" class="space-y-4">
                        <!-- Options injected here -->
                    </div>
                    <div id="quiz-feedback" class="mt-6 p-4 rounded-lg hidden"></div>
                    <button id="next-btn" onclick="nextQuestion()" class="mt-6 bg-[#2c3e50] text-white px-6 py-2 rounded hidden">Next Question</button>
